{% extends 'base.html.twig' %}

{% block title %}Détail d'une catégorie{% endblock %}

{% block body %}
   <div class="container">
    <h1>Catégorie : {{ categorie.nom }}</h1>
 
    <h3>Liste des modules</h3>
    {# on verifie si le tableau(collection) modulesessions dans categorie est vide => categorie vide #}
    {% if categorie.moduleSessions|length > 0 %}
        <ul>
            {% for moduleSession in categorie.moduleSessions %}
                <li>{{ moduleSession.nom }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Cette catégorie n'a aucun programme.</p>
    {% endif %}
    </div>
{% endblock %}
