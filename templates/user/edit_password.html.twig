
{% extends 'base.html.twig' %}

{% block body %}
    <h1>Modifier le mot de passe utilisateur</h1>

    {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.pseudo) }}
        {{ form_row(form.oldPassword) }}
        {{ form_row(form.plainPassword) }}
        <a href="{{ path('app_login') }}"><button type="submit" class="btn btn-primary">Mettre Ã  jour</button></a>
    {{ form_end(form) }}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}
