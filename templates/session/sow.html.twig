

{% extends 'base.html.twig' %}

{% block title %}DÃ©tail d'une Session{% endblock %}

{% block body %}
<div class="container">
    <h1>Session : {{ session.intitule }}</h1>
    <p>Description : {{ session.description }}</p>

    <h3>Programmes de la session</h3>
    {% if session.programmes|length > 0 %}
        <ul>
            {% for programme in session.programmes %}
                <li><a href="{{ path('show_programme', { 'id': programme.id }) }}">{{ programme.getNom() }}</a></li>
            {% endfor %}
        </ul>
    {% else %}
        <p>Cette session n'a aucun programme.</p>
    {% endif %}
</div>
{% endblock %}
